extend includes/_layout
block title
	title Post
block content
	.wrap
		// begin aside
		aside.aside
			.aside-title From around the web
			ul.aside__list
				li.card
					a(href="#").card__cat
						+icon('entertainment')
					a(href="#").card__in
						.card__in-img: img(src="img/content/1.jpg", alt="image")
						.card__in-text
							p 18 Amazing Images From National Geographic’s Traveler Photo Contest
							p Get up close and personal with our crazy amazing world.
				li.card
					a(href="#").card__cat
						+icon('babes')
					a(href="#").card__in
						.card__in-img: img(src="img/content/2.jpg", alt="image")
						.card__in-text
							p This Is All You Need To Know About Workout Supplements
							p What they are and aren’t doing to your body.
				li.card
					a(href="#").card__cat
						+icon('lifestyle')
					a(href="#").card__in
						.card__in-img: img(src="img/content/3.jpg", alt="image")
						.card__in-text
							p If ‘Broad City’ Quotes Were Inspirational Posters About Life
							p Broad City quotes will change your life…nomo fomo.
				li.card
					a(href="#").card__cat
						+icon('babes')
					a(href="#").card__in
						.card__in-img: img(src="img/content/4.jpg", alt="image")
						.card__in-text
							p 15 People Who Just Totally Went There
							p If you could be anything, anything at all…
				li.card
					a(href="#").card__cat
						+icon('entertainment')
					a(href="#").card__in
						.card__in-img: img(src="img/content/5.jpg", alt="image")
						.card__in-text
							p This Incredible Makeup Artist Transforms Herself Into Monsters
							p The creepiest creatures created by the stroke of a makeup brush.
				li.card
					a(href="#").card__cat
						+icon('lifestyle')
					a(href="#").card__in
						.card__in-img: img(src="img/content/6.jpg", alt="image")
						.card__in-text
							p The creepiest creatures created by the stroke of a makeup brush.
							p These people need new friends, stat.
		// end aside

		// begin post
		.post
			.post__img: img(src="img/content/a1.jpg", alt="image")
			p.post__title.
				This Carolina Panther Is Airbnb-ing His Place For Super Bowl Sunday
			p Roman Harper, a safety for the Carolina Panthers, put his Charlotte apartment on Airbnb for someone to rent while he’s busy “playing the Denver Broncos at Super Bowl 50.” Yes, that’s what it actually says.
			img(src="img/content/a2.jpg", alt="image")
			img(src="img/content/a3.jpg", alt="image")
			p A rep for Airbnb confirmed that this in fact real, and the one-bedroom, two-bath apartment and all its amenities are actually available for a night.
			img(src="img/content/a4.jpg", alt="image")
		// end post
